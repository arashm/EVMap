<div data-controller="map">
  <p class="mb-2 text-slate-700">
    This is the map EV chargers within Berlin. You can search for an address to
    get the 3 nearest chargers to your location, or set your favorite chargers
    by clicking on them.
  </p>

  <div class="mb-2">
    <%= form_for(:search, url: search_charger_index_path, data: { action: 'submit->map#search' }) do |f| %>
      <div class="flex justify-around items-stretch">
        <span class='w-full flex-grow'>
          <%= f.text_field :q,
                       placeholder: "Enter Address",
                       class:
                         "w-full rounded-l-lg focus:border-indigo-600 focus:ring focus:ring-indigo-300 focus:ring-opacity-50 py-2",
                       data: {
                         "map-target": "searchInput"
                       } %>
        </span>
        <span>
          <%= f.submit "Search",
                   class:
                     "bg-indigo-600 text-white py-2 px-6 rounded-r-lg cursor-pointer outline-none h-full",
                   data: {
                     disable_with: false
                   } %>

        </span>
      </div>

    <% end %>

    <%= render "flash_message" %>
  </div>

  <div style="height: 800px">
    <div
      data-map-target="mapContainer"
      id="map"
      style="width: 100%; height: 800px;"
    ></div>
  </div>
</div>
